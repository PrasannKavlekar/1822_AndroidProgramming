<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fpage1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Frag_Page1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_marginTop="56dp"
            android:scaleType="fitXY"
            android:src="@drawable/vader_comics"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="415dp"
            android:layout_height="460dp"
            android:background="@color/design_default_color_on_secondary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ntb_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginRight="50dp"
                    android:hint="@string/name"
                    app:boxStrokeColor="#EF5350"
                    app:endIconTint="@color/design_default_color_error"
                    app:hintTextColor="@color/design_default_color_error"
                    app:startIconDrawable="@drawable/ic_baseline_person_24"
                    app:startIconTint="@color/design_default_color_on_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ntb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#EF9A9A" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ctb_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="50dp"
                    android:hint="@string/contact"
                    app:boxStrokeColor="#C41616"
                    app:endIconTint="@color/design_default_color_error"
                    app:hintTextColor="@color/design_default_color_error"
                    app:startIconDrawable="@drawable/ic_baseline_local_phone_24"
                    app:startIconTint="@color/design_default_color_on_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ctb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#EF9A9A"
                        android:inputType="phone" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etb_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="50dp"
                    android:hint="@string/email"
                    app:boxStrokeColor="#DB4B4B"
                    app:endIconTint="@color/design_default_color_error"
                    app:hintTextColor="@color/design_default_color_error"
                    app:startIconDrawable="@drawable/ic_baseline_email_24"
                    app:startIconTint="@color/design_default_color_on_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#EF9A9A"
                        android:inputType="textEmailAddress" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ptb_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="50dp"
                    android:hint="Password"
                    app:boxStrokeColor="#DB4B4B"
                    app:endIconMode="password_toggle"
                    app:hintTextColor="@color/design_default_color_error"
                    app:startIconDrawable="@drawable/ic_baseline_vpn_key_24"
                    app:startIconTint="@color/design_default_color_on_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ptb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#EF9A9A"
                        android:inputType="textPassword" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ptb1_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="50dp"
                    android:hint="@string/confirm_password"
                    app:boxStrokeColor="#DB4B4B"
                    app:endIconMode="password_toggle"
                    app:hintTextColor="@color/design_default_color_error"
                    app:startIconDrawable="@drawable/ic_baseline_vpn_key_24"
                    app:startIconTint="@color/design_default_color_on_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ptb1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#EF9A9A"
                        android:inputType="textPassword" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatbtn"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:tint="#F44336"
            app:backgroundTint="#EF5350"
            app:layout_anchor="@id/image"
            app:layout_anchorGravity="bottom|end"
            app:layout_constraintBottom_toTopOf="@+id/scrollView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image"
            app:srcCompat="@android:drawable/ic_menu_camera" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_on_secondary">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#E57373"
            app:menu="@menu/menu"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            app:title="@string/app_name" />

    </com.google.android.material.appbar.AppBarLayout>


</FrameLayout>